#include<iostream>

int main()
	
{

int m,s,min;
cout<<"\n\t   A COUNTDOWN TIMER \n";
cout<<"MINUTES \t = \t";
cin>>m;
cout<< "SECONDS \t = \t";
cin>>s;
cout<<"\n\t press any key to start...!!!";

cout<<"\n\t     A COUNTDOWN TIMER \n";
cout<<"\n\t TIME REMAINIG \n\n";
cout<<"\t mins: \t\t seconds: ";
for(min=m;min>0;min--)
{
for(int sec=59;sec>=0;sec--)
{ 
	sleep(1);
cout<<"\r"<<min<<"\t"<<sec;
}
}
for(int rem=s;rem>=0;rem--)
{
cout<<"\r"<<min<<"\t"<<rem;
}
cout<<"\n\n  ENDED ";
return 0;
}

